{
    "manifest_version": 3,
    "name": "OnlyBlock",
    "version": "1.0.0",
    "description": "Blocks X.com profiles that contain OnlyFans links in their bio",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://x.com/*",
        "https://twitter.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*",
                "https://twitter.com/*",
                "file://*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "OnlyBlock"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "onlyblock@example.com",
            "strict_min_version": "109.0"
        }
    }
}